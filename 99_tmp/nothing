# .gitlab-ci.yml

stages:
  - build
  - test
  - deploy

variables:
  BUILD_TYPE: "Release"

.checkout_qtstools_repo:
  script:
    - echo "Checking out QTS tools repository..."

build_job:
  stage: build
  script:
    - !reference [.checkout_qtstools_repo, script]
    - >
      python -u xxx.py --build-type $BUILD_TYPE
    - >
      Copy-Item -ErrorAction SilentlyContinue -Path ./build_output -Destination /deploy_path

test_job:
  stage: test
  script:
    - echo "Running tests..."
    - python -u test.py

deploy_job:
  stage: deploy
  script:
    - echo "Deploying the project..."
    - Copy-Item -ErrorAction SilentlyContinue -Path ./build_output -Destination /deploy_path